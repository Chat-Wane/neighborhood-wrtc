{
    "name": "neighborhood-wrtc",
    "version": "2.0.1",
    "description": "neighborhood (or partial view) containing peers to communicate with",
    "main": "lib/neighborhood.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ran3d/neighborhood-wrtc"
    },
    "keywords": [
        "WebRTC",
        "browser-to-browser communication",
        "overlay network"
    ],
    "author": "Chat-Wane",
    "license": "MIT",
    "dependencies": {
        "debug": "^2.6.1",
        "lodash": "^4.17.4",
        "simple-peer": "^8.1.1",
        "uuid": "^3.0.1"
    },
    "bundledDependencies": [
        "simple-peer",
        "uuid",
        "lodash",
        "debug"
    ],
    "devDependencies": {
        "babel-preset-es2015": "^6.24.1",
        "babelify": "^7.3.0",
        "browserify": "^14.4.0",
        "esdoc": "^0.5.2",
        "esdoc-node": "^1.0.2"
    },
    "scripts": {
        "esdoc": "esdoc && npm run esdoc:example",
        "esdoc:example": "cp -R ./build ./examples ./img ./docs",
        "test": "npm run all",
        "all": "npm run debug && npm run build && npm run esdoc",
        "debug": "browserify -r ./lib/neighborhood.js:neighborhood-wrtc -t [ babelify --presets [ es2015 ] ] --debug > build/neighborhood-wrtc.bundle.debug.js",
        "build": "browserify -r ./lib/neighborhood.js:neighborhood-wrtc -t [ babelify --presets [ es2015 ] ] > build/neighborhood-wrtc.bundle.js"
    }
}
